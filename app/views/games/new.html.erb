<h1>New game</h1>

<div class="letters">
  <% @letters.each do |letter| %>
    <p class ="letter"><%= letter %></p>
  <% end %>
</div>

<form action="/score" method="post" class="form-inline">
  <div class="form-group">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="longestword"">What is the longest word you can find?</label>
    <input type="text" name="lw" class="form-control" id="longestword">
    <%= hidden_field_tag :letters, @letters%>
    <%= hidden_field_tag :start_time, @start_time %>
  </div>
  <button type="submit" class="btn btn-primary">Play</button>
</form>

